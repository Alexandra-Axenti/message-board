{{#if editQuestionForm}}
  <h4>Edit Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=question.date}}
      </div>

      <button {{action 'edit' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestionShow'}}>Edit Question</button>
{{/if}}
